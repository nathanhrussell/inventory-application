<%- include("../partials/header") %>

<h2><%= item.name %></h2>

<p><strong>Price:</strong> €<%= Number(item.price).toFixed(2) %></p>
<p><strong>Stock:</strong> <%= item.quantity_in_stock %></p>
<% if (item.on_sale) { %>
  <p style="color: red;"><strong>This item is on sale!</strong></p>
<% } %>
<p><strong>Description:</strong> <%= item.description || "No description." %></p>

<a href="/items/<%= item.id %>/edit">Edit</a> |
<form action="/items/<%= item.id %>?_method=DELETE" method="POST" style="margin-top: 1rem; display: inline-block;">
  <label>Master Password:</label>
  <input type="password" name="masterPassword" class="toggle-password" required>
  <button type="button" class="show-toggle">👁️</button>
  <button type="submit">Delete</button> <!-- ✅ This is the missing line -->
</form>

<%- include("../partials/footer") %>
